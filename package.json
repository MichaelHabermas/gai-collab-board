{
  "name": "collabboard",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "format": "prettier --write src",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test:run": "vitest run",
    "test:e2e:ui": "playwright test --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright install && playwright test",
    "test:ai-connection": "bun run scripts/test-ai-connection.ts",
    "perf:check": "bun run scripts/run-performance-check.ts",
    "clear-boards": "bun run scripts/clear-boards.ts",
    "proxy": "bun run server/index.ts",
    "validate": "bun run format && bun run typecheck && bun run lint && bun run test:run",
    "preflight:release": "bun run scripts/preflight-release.ts",
    "deploy:firebase-rules": "bun run scripts/deploy-firebase-rules.ts",
    "smoke:ai-proxy": "bun run scripts/smoke-ai-proxy.ts",
    "usage:record-event": "bun run scripts/record-usage-event.ts",
    "usage:rebuild-report": "bun run scripts/rebuild-usage-report.ts",
    "benchmark:strict": "bun run scripts/release-gate.ts --skip-proxy-smoke",
    "release:gate": "bun run scripts/release-gate.ts",
    "cleanup": "bun run lint:fix && bun run format",
    "test:full": "bun run cleanup && bun run validate && bun run test:e2e && bun run test:e2e:ui && bun run test:coverage && bun run perf:check && bun run test:ai-connection"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.1",
    "@stylistic/eslint-plugin": "^4.0.0",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^19.2.11",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "jsdom": "^28.0.0",
    "playwright": "^1.58.1",
    "prettier": "^3.8.1",
    "rollup-plugin-visualizer": "^6.0.8",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "firebase": "^12.8.0",
    "konva": "^10.2.0",
    "lucide-react": "^0.563.0",
    "openai": "^6.17.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-konva": "^19.2.2",
    "react-router-dom": "^7.13.0",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.11"
  }
}
