rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isBoardMember(boardId) {
      let board = get(/databases/$(database)/documents/boards/$(boardId));
      return board != null && request.auth.uid in board.data.members;
    }
    
    function canEdit(boardId) {
      let board = get(/databases/$(database)/documents/boards/$(boardId));
      let role = board.data.members[request.auth.uid];
      return role == 'owner' || role == 'editor';
    }
    
    function isOwner(boardId) {
      let board = get(/databases/$(database)/documents/boards/$(boardId));
      return board.data.ownerId == request.auth.uid;
    }

    // True when the only change to members is adding request.auth.uid with role editor or viewer
    function canAddSelfAsMember() {
      let newMembers = request.resource.data.members;
      let oldMembers = resource.data.members;
      return request.auth.uid in newMembers
        && !(request.auth.uid in oldMembers)
        && newMembers[request.auth.uid] in ['editor', 'viewer']
        && newMembers.diff(oldMembers).addedKeys().hasOnly([request.auth.uid])
        && newMembers.diff(oldMembers).removedKeys().size() == 0;
    }
    
    // Board rules
    match /boards/{boardId} {
      // Any authenticated user can read a board (by ID/link) so they can join and then edit
      allow read: if isAuthenticated();
      
      // Anyone authenticated can create a board
      allow create: if isAuthenticated() 
        && request.resource.data.ownerId == request.auth.uid
        && request.resource.data.members[request.auth.uid] == 'owner';
      
      // Members with edit permission can update (but only owner can change name); or a user can add themselves as editor/viewer
      allow update: if isAuthenticated() && (
        canAddSelfAsMember()
        || (canEdit(boardId) && (request.resource.data.name == resource.data.name || isOwner(boardId)))
      );
      
      // Only owners can delete
      allow delete: if isAuthenticated() && isOwner(boardId);
      
      // Board objects subcollection - only editors and owners can write
      match /objects/{objectId} {
        allow read: if isAuthenticated() && isBoardMember(boardId);
        allow write: if isAuthenticated() && canEdit(boardId);
      }
    }
    
    // User profiles (optional, for user lookup)
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
  }
}
